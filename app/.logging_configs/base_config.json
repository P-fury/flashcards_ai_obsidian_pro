{
  "version": 1,
  "disable_existing_loggers": false,
  "filters": {},
  "formatters": {
    "simple": {
      "format": "%(levelname)s %(message)s"
    }
  },
  "handlers": {
    "stderr": {
      "class": "logging.StreamHandler",
      "level": "WARNING",
      "formatter": "simple",
      "stream": "ext://sys.stderr"
    },
    "file": {
    "class": "logging.handlers.RotatingFileHandler",
    "level": "DEBUG",
    "formatter": "simple",
    "filename": "logs/app.log",
    "maxBytes": 10000,
    "backupCount": 3
  }

  },
  "loggers": {
    "root": {
      "level": "DEBUG",
      "handlers": [
        "stderr",
        "file"
      ]
    }
  }
}